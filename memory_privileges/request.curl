# Vulnerable Terraform file with memory limit issue
resource "null_resource" "example_post_request" {
  provisioner "local-exec" {
    command = <<-EOF
      curl -X POST -d "data=@largefile" http://example.com --max-filesize 2048
    EOF
  }
}

# Privileged execution
resource "null_resource" "example_privileged_request" {
  provisioner "local-exec" {
    command = <<-EOF
      curl -u root:password http://example.com
    EOF
  }
}
